<h2>Update Book</h2>
<%= form_for(@book) do |f| %>

    <table summary="Books form fields">
        <tr>
            <th>Name</th>
            <td><%= f.text_field(:title)%></td>
        </tr>
        <tr>
            <th>Author</th>
            <td><%= f.text_field(:author)%></td>
        </tr>
        <tr>
            <th>Genre</th>
            <td><%= f.text_field(:genre)%></td>
        </tr>
        <tr>
            <th>Price</th>
            <td><%= f.text_field(:price)%></td>
        </tr>
        <tr>
            <th>Published Date</th>
            <td><%= f.text_field(:publishDate)%></td>
        </tr>
    </table>

    <div>
        <%= f.submit("Update Book") %>
    </div>
    <a href="/books/index">Back to Library</a> <br>
<% end %>
